<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/DialogWindow"
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewName1"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete this item?"
            android:textSize="21sp"
            android:textStyle="bold"
            android:gravity="center" />

        <LinearLayout
            android:id="@+id/NameandExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewName2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textSize="34sp"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewLotNum2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lot #"
            android:textSize="20sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewPeriod2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Period"
            android:textSize="20sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textCategory2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="20sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewDescription2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="Description"
            android:gravity="center" />

        <FrameLayout
            android:id="@+id/Media"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars" />
        </FrameLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/darkgrey"
                tools:cornerRadius="5dp"
                />

            <Button
                android:id="@+id/buttonYes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/darkgrey"
                android:text="Confirm"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                tools:cornerRadius="5dp"
                />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
